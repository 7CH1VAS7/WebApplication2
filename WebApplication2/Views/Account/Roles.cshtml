@using WebApplication2.Controllers
@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Управление ролями";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Создать новую роль</h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateRole" method="post">
                    <div class="input-group">
                        <input type="text" name="roleName" class="form-control" placeholder="Название роли" required />
                        <button type="submit" class="btn btn-primary">Создать</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <h4>Существующие роли</h4>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Роль</th>
                    <th>Количество пользователей</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>@role.UserCount</td>
                        <td>
                            @if (role.UserCount == 0)
                            {
                                <form asp-action="DeleteRole" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@role.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm"
                                            onclick="return confirm('Вы уверены, что хотите удалить эту роль?')">
                                        Удалить
                                    </button>
                                </form>
                            }
                            else
                            {
                                <span class="text-muted">Нельзя удалить (есть пользователи)</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Users" class="btn btn-secondary">Назад к пользователям</a>
</div>