@model IEnumerable<Project>
@{
    ViewData["Title"] = "Список проектов";
}

<h1>@ViewData["Title"]</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    <p>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Создать новый проект
        </a>
    </p>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Проекты не найдены. Создайте первый проект.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Название</th>
                    <th>Описание</th>
                    <th>Дата начала</th>
                    <th>Дата окончания</th>
                    <th>Дефекты</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@item.Name</strong>
                        </td>
                        <td>
                            @if (string.IsNullOrEmpty(item.Description))
                            {
                                <span class="text-muted">—</span>
                            }
                            else
                            {
                                @(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)
                            }
                        </td>
                        <td>@item.StartDate.ToString("dd.MM.yyyy")</td>
                        <td>
                            @if (item.EndDate.HasValue)
                            {
                                @item.EndDate.Value.ToString("dd.MM.yyyy")
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                        <td>
                            <span class="badge @GetDefectsCountBadgeClass(item.Defects.Count)">
                                @item.Defects.Count
                            </span>
                            @if (item.Defects.Count(d => d.Status == DefectStatus.New) > 0)
                            {
                                <span class="badge bg-secondary ms-1" title="Новые">
                                    @item.Defects.Count(d => d.Status == DefectStatus.New)
                                </span>
                            }
                            @if (item.Defects.Count(d => d.Status == DefectStatus.InProgress) > 0)
                            {
                                <span class="badge bg-primary ms-1" title="В работе">
                                    @item.Defects.Count(d => d.Status == DefectStatus.InProgress)
                                </span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-info btn-sm" title="Подробности">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-warning btn-sm" title="Редактировать">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-danger btn-sm" title="Удалить">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@functions {
    public string GetDefectsCountBadgeClass(int count)
    {
        return count switch
        {
            0 => "bg-secondary",
            < 5 => "bg-success",
            < 10 => "bg-warning",
            _ => "bg-danger"
        };
    }
}